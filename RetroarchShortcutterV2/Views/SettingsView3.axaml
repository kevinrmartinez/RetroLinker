<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="550"
             x:Class="RetroarchShortcutterV2.Views.SettingsView3"
			 Name="SettingsView3_1">

	<UserControl.Styles>
		<StyleInclude Source="/Styles/SettingsStyles.axaml"/>
	</UserControl.Styles>

	<Grid RowDefinitions="Auto, Auto, *">
		<Border Grid.Row="0" Classes="SettingCatg">
			<StackPanel>
				<Label Content="Salida por Default"/>
				<Rectangle HorizontalAlignment="Stretch" Stroke="Gray" StrokeThickness="0.5"/>
				<CheckBox Name="chkAlwaysOutput" Classes="SettingCatg" Content="Preguntar siempre el destino del Shortcut"/>
				<Label Content="Directorio Default"/>
				<Grid ColumnDefinitions="*, Auto, Auto">
					<TextBox Grid.Column="0" Classes="SettingCatg"/>
					<Button Grid.Column="1"/>
					<Button Grid.Column="2" Classes="SettingCatg"/>
				</Grid>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
