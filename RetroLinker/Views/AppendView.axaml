<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:locale="clr-namespace:RetroLinker.Translations"
             mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="550"
             x:Class="RetroLinker.Views.AppendView">
    <UserControl.Styles>
        <StyleInclude Source="../Styles/MainWindowStyles.axaml"/>
    </UserControl.Styles>
    
    <Grid Name="gridContent" RowDefinitions="Auto,*">
        <!-- Header -->
        
        <!-- Body -->
        <Grid Name="gridBODY" Grid.Row="1" RowDefinitions="Auto,Auto,*,Auto" Margin="3">
            
            <!-- ROW0 - Spacing -->
            <Rectangle Grid.Row="0" Height="8"/>
            
            <!-- ROW1 - Append Controls -->
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Label Content="Path of Config to Append"/>
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <TextBox Name="txtConfigPath" Grid.Column="0" Watermark="config_extra.cfg"/>
                    <Button Name="btnConfigPathBrowse" Grid.Column="1" i:Attached.Icon="fa-folder-open" FontSize="18" Click="BtnConfigPathBrowse_OnClick"/>
                    <Button Name="btnConfigPathClear" Grid.Column="2" i:Attached.Icon="fa-folder-open" FontSize="18" Click="BtnConfigPathClear_OnClick">
                        <i:Icon Value="fa-arrow-rotate-left" Foreground="Crimson"/>
                    </Button>
                </Grid>
            </StackPanel>
            
            <!-- ROW2 - Spacing -->
            <Rectangle Grid.Row="2"/>
            
            <!-- ROW3 - View Controls -->
            <Grid Grid.Row="3" HorizontalAlignment="Stretch" ColumnDefinitions="*, *" Margin="3,5">
                <Button Name="btnSaveAppend" Grid.Column="0" Height="50" Click="BtnSaveAppend_OnClick"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <i:Icon FontSize="24" Value="fa-check" Foreground="Green"/>
                        <TextBlock FontSize="24" Text="{x:Static locale:resGeneric.btnConfirm}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Name="btnDiscAppend" Grid.Column="1" Height="50" Click="BtnDiscAppend_OnClick" 
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <i:Icon FontSize="24" Value="fa-x" Foreground="Crimson"/>
                        <TextBlock FontSize="24" Text="{x:Static locale:resGeneric.btnDiscard}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
            
        </Grid>
    </Grid>
</UserControl>
